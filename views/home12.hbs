
{{#if removeUser }}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <strong>User Deleted Succesfully!</strong> 
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
 
<div class="row">
  <div class="col-6"><h1>Users</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/admin/adduser" type="button" class="btn btn-primary align-self-center">Add User</a>
  </div>
</div>




<table class="zebra">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Active</th>
      <th scope="col">Role</th>
      <th scope="col">Notes</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td>{{this.active}}</td>
      <td>{{this.isAdmin}}</td>
      <td>{{this.comments}}</td>
      <td class="text-end">
          <a href="/admin/viewuser/{{this.id}}" type="button" class="btn btn-light btn small"><i class="bi bi-eye">View</i></a>
          <a href="/admin/edituser/{{this.id}}" type="button" class="btn btn-light btn small"><i class="bi bi-pencil">Edit</i></a>
          <a href="/admin/{{this.id}}" type="button" class="btn btn-light btn small"><i class="bi bi-person-x">Delete</i></a>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>