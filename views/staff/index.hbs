
{{#if removeUser }}
<div class="alert alert-success" role="alert">
  <strong>User Deleted Succesfully!</strong> 
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

 {{#if message }}
  <div class="alert alert-success" role="alert">
    <strong>{{message}}</strong> 
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/if}}

<div class="page-heading">
  <div class="page-title"><h1>Employees</h1></div>
  <div class="page-action">
    <a href="/staff/adduser" type="button" class="btn btn-add">Add Staff</a>
  </div>
</div>




<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Date Birth</th>
      <th scope="col">Active</th>
      <th scope="col">Role</th>
      <th scope="col">Notes</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.phone}}</td>
      <td>{{this.email}}</td>
      <td>{{this.dob}}</td>
      <td>{{this.active}}</td>
      <td>{{this.isAdmin}}</td>
      <td>{{this.comments}}</td>
      <td class="text-end">
          <a href="/staff/viewuser/{{this.id}}" type="button" class="btn btn-cancel"><i class="fas fa-eye">View</i></a>
          <a href="/staff/edituser/{{this.id}}" type="button" class="btn btn-edit"><i class="far fa-edit">Edit</i></a>
          <a href="/staff/{{this.id}}" type="button" class="btn btn-delete"><i class="fas fa-user-slash">Delete</i></a>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>